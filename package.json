{
  "name": "smart-macro-tool",
  "version": "1.0.0",
  "description": "AI-Powered Spreadsheet Automation Desktop Application",
  "main": "src/frontend/dist-electron/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:backend": "cd src/backend && python -m uvicorn app.main:app --reload --port 8000",
    "start": "cd src/frontend && npm run dev",
    "build": "cd src/frontend && npm run build",
    "electron": "cd src/frontend && npm run electron:dev",
    "electron:build": "cd src/frontend && npm run electron:build",
    "electron:start": "cd src/frontend && electron .",
    "setup": "cd src/frontend && npm install --legacy-peer-deps && cd ../backend && pip install -r requirements.txt",
    "test": "cd src/frontend && npm test",
    "test:run": "cd src/frontend && npm run test:run",
    "test:coverage": "cd src/frontend && npm run test:coverage",
    "test:backend": "cd src/backend && python -m pytest"
  },
  "keywords": [
    "automation",
    "macro",
    "ai",
    "productivity",
    "electron",
    "desktop"
  ],
  "author": "Smart Macro Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "docsify-cli": "^4.4.4"
  }
}
